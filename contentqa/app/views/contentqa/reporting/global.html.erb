<%= form_tag reporting_create_path do %>
  <%= hidden_field_tag "id", @global_reports_id %>
  <%= hidden_field_tag "provider", "global" %>

  <div>
    <div style="width: 50%; float:left;">
      <%= button_tag "Generate Reports", class: "generate_reports" %>
    </div>

    <% if @all_reports %>
      <div class="all_reports" style="width: 50%; float: right;">
        <%= report_link(@all_reports, false, @global_reports_id, 'all') %><small> <%= report_details(@all_reports, false) %></small>
      </div>
    <% else %>
      <div class="all_reports" style="width: 50%; float: right; display: none">
        <%= report_link(@all_reports, false, @global_reports_id, 'all') %><small> <%= report_details(@all_reports, false) %></small>
      </div>
    <% end %>
  </div>

  <div style="clear: both;">
    <table class="table">
      <colgroup>
       <col span="1" style="width: 50%;">
       <col span="1" style="width: 50%;">
      </colgroup>
      <th><%= check_box_tag "check_all" %> Report</th>
      <th>Status</th>
      <% @reports.each do |type| %>
        <tr>
          <td><%= check_box_tag "reports[]", type, false, :disabled => (report[:file] or report[:job]), :class => "report_checkbox" %>&nbsp<%= type %></td>
          <td class='<%= "#{type}" %>_status'><%= render "report_status", :report => report, :ingest_id => @global_reports_id, :type => type %>
        </tr>
      <% end %>
      <tr>
        <td><%= button_tag "Generate Reports", class: "generate_reports" %></td>
        <% if @all_reports %>
          <td class="all_reports"><%= report_link(@all_reports, false, @global_reports_id, 'all') %><small> <%= report_details(@all_reports, false) %></small></td>
        <% else %>
          <td class="all_reports" style="display: none"><%= report_link(@all_reports, false, @global_reports_id, 'all') %><small> <%= report_details(@all_reports, false) %></small></td>
        <% end %>
      </tr>
    </table>
  </div>
<% end %>
